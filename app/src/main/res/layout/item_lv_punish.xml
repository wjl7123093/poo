<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_bg_notice"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tvItemPunishText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题标题标题。。。。"
        android:textColor="@color/BLACK_H"
        android:textSize="@dimen/app_textsize_mid2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tvItemPunishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-10-27"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/app_textsize_mid3"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tvItemPunishText"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未读"
        android:textColor="#ffa400"
        android:textSize="@dimen/app_textsize_mid3"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tvItemPunishTime"/>


</RelativeLayout>


